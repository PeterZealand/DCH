@page
@model DCH.Pages.Events.UpdateEventModel
@{
    ViewData["Title"] = "Update Event";
}
<h1>Update Event</h1>
<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Event.Id" class="control-label"></label>
        <input asp-for="@Model.Event.Id" class="form-control" readonly/>
        <span asp-validation-for="@Model.Event.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.Name" class="control-label">Name</label>
        <input asp-for="@Model.Event.Name" class="form-control"/>
        <span asp-validation-for="@Model.Event.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.Description" class="control-label">Description</label>
        <input asp-for="@Model.Event.Description" class="form-control" />
        <span asp-validation-for="@Model.Event.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.City" class="control-label">City</label>
        <input asp-for="@Model.Event.City" class="form-control" />
        <span asp-validation-for="@Model.Event.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.DateTime" class="control-label">Date and time</label>
        <input asp-for="@Model.Event.DateTime" class="form-control" />
        <span asp-validation-for="@Model.Event.DateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

</form>

<div>
    <a asp-page="index">Back to event list</a>
</div>
