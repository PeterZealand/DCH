@page "{Source?}"
@model DCH.Pages.Actors.DeleteActorModel
@{
    ViewData["Title"] = "DeleteActor";
    var source = Model.Source ?? "actor";
}
<h1>DeleteActor</h1>
<h3>Er du sikker på du vil slette din profil?</h3>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @* @Html.DisplayNameFor(model => model.Actor.Id) *@
                <p>Bruger Id:</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.Id)
            </dd>
            <dt class="col-sm-2">
                @* @Html.DisplayNameFor(model => model.Actor.FirstName) *@
                <p>Fornavn:</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor.Dog)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.Dog)
            </dd>
        </dl>
        <div class="form-group button-container">
            <input type="submit" value="Slet" class="btn btn-primary large-btn" />
            
            @if (source == "admin")
            {
                <a asp-page="/Actors/GetAllActors" class="btn btn-secondary large-btn">Tilbage til medlemslisten</a>
            }
            else
            {
                <a asp-page="/Actors/Profile" class="btn btn-secondary large-btn">Tilbage til din profil</a>
            }
            
        </div>
    </form>
</div> 